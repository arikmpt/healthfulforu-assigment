APP_NAME="Healthfulforyou"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.healthfulforyou.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - Production
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=healthfulforyou_v2
DB_USERNAME=healthfulforyou
DB_PASSWORD=your_secure_password_here

# Session - Use Redis for production
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.healthfulforyou.com
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Cache - Use Redis for production
CACHE_STORE=redis
CACHE_PREFIX=healthfulforyou_cache

# Redis - Production
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail - Production (use SES, Mailgun, etc.)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@healthfulforyou.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (for S3 storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=healthfulforyou-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Stripe (for payments)
STRIPE_KEY=pk_live_xxxxx
STRIPE_SECRET=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Sentry (for error tracking)
SENTRY_LARAVEL_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Security
SANCTUM_STATEFUL_DOMAINS=healthfulforyou.com,www.healthfulforyou.com
SESSION_DOMAIN=.healthfulforyou.com

VITE_APP_NAME="${APP_NAME}"
